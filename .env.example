# KIE / Suno API key (get from https://kie.ai/api-key)
KIE_API_KEY=your_api_key_here

# Public app URL for callback (required for Generate Music; use ngrok for local dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MongoDB Atlas connection string
DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/suno_studio?retryWrites=true&w=majority

# NextAuth (JWT sessions; User + Account stored in MongoDB)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_secure_random_string
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
